<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical"
    tools:context=".activity.MapsActivity">


    <RelativeLayout
        android:background="@color/red_dan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:background="@drawable/back_index" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_284px_in720p"
            android:layout_height="@dimen/_56px_in720p"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/baidu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_data_tv_bg"
                android:gravity="center"
                android:text="Baidu"
                android:textColor="@drawable/main_color" />

            <TextView
                android:id="@+id/google"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_map_tv_bg"
                android:gravity="center"
                android:text="Google"
                android:textColor="@drawable/main_color" />

        </LinearLayout>

    </RelativeLayout>

    <com.meigsmart.huaapp.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>