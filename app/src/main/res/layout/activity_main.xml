<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p"
        android:background="@color/red_dan">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:background="@drawable/hua_main_log" />

        <LinearLayout
            android:id="@+id/msgLayout"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="@dimen/_48px_in720p"
                android:layout_height="@dimen/_48px_in720p"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:background="@drawable/message" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addDevices"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/_60px_in720p"
            android:layout_height="@dimen/_60px_in720p"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/binding_device" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_toRightOf="@+id/img2"
            android:text="@string/fragment_linkman_binding_device"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_28px_in720p" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/my_34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"
            android:layout_alignParentBottom="true"
            android:background="@color/pop_txt_bg" />

    </RelativeLayout>

    <TextView
        android:id="@+id/deviceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20px_in720p"
        android:text="@string/main_device_list"
        android:textColor="@color/black_dan"
        android:textSize="@dimen/_30px_in720p" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>