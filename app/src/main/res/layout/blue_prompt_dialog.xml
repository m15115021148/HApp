<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400px_in720p"
        android:layout_marginLeft="@dimen/_60px_in720p"
        android:layout_marginRight="@dimen/_60px_in720p"
        android:background="@drawable/blue_prompt_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_20px_in720p"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/blue_prompt_dialog"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/pop_txt_bg"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/lan_dan"
            android:textSize="@dimen/_30px_in720p" />

    </LinearLayout>

</LinearLayout>