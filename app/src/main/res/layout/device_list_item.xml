<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p">

        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_centerVertical="true"
            android:background="@drawable/device_bg"
            android:layout_width="@dimen/_48px_in720p"
            android:layout_height="@dimen/_48px_in720p" />

        <TextView
            android:layout_toRightOf="@+id/img"
            android:layout_centerVertical="true"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_30px_in720p"
            android:singleLine="true"
            android:id="@+id/name"
            android:layout_marginLeft="@dimen/_10px_in720p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_alignParentBottom="true"
            android:background="@color/pop_txt_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"/>

    </RelativeLayout>

</LinearLayout>